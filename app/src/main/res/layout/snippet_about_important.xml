<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_bar_line"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:text="Important Links"
            android:textSize="17sp"
            android:id="@+id/acc"
            android:textColor="@color/black"
            android:layout_marginLeft="35dp"
            android:padding="5dp"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_hospital" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/img2"
                android:layout_toRightOf="@+id/img2"
                android:text="Ministry of Health"
                android:textSize="17sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/hr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_organisation" />

            <TextView
                android:id="@+id/adminarea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/img3"
                android:layout_toRightOf="@+id/img3"
                android:text="United Nation Human Rights Activists"
                android:textSize="17sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icp_police" />

            <TextView
                android:id="@+id/adminarea2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/img4"
                android:layout_toRightOf="@+id/img4"
                android:text="Uganda Police Force"
                android:textSize="17sp" />
        </RelativeLayout>

    </LinearLayout>
</merge>