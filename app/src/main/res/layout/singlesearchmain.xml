<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_bar_line">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/attendee_pic"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_account_black"
        app:civ_border_color="@color/grey"
        app:civ_border_width="1dp"
        tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLength="17"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="Cryce Truly"
                android:layout_toEndOf="@+id/attendee_pic"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_toRightOf="@+id/attendee_pic" />

    <ImageView
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_add_black" />

    </RelativeLayout>



