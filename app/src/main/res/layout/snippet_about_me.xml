<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_bar_line"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:text="Account"
            android:textSize="17sp"
            android:id="@+id/acc"
            android:textColor="@color/black"
            android:layout_marginLeft="35dp"
            android:padding="5dp"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/img"
                android:src="@drawable/ic_account_black"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_toEndOf="@+id/img"
                android:text="User_id"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="17sp"
                android:layout_toRightOf="@+id/img" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/imgg"
                android:src="@drawable/verifieduser"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imgg"
                android:text="UserName"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="17sp"
                android:layout_toRightOf="@+id/imgg" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/img2"
                android:src="@drawable/ic_location_black"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/img2"
                android:text="Mbarara Uganda"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="17sp"
                android:layout_toRightOf="@+id/img2" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/img3"
                android:src="@drawable/ic_admin_area_black"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/adminarea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/img3"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="17sp"
                android:layout_toRightOf="@+id/img3" />
        </RelativeLayout>

    </LinearLayout>
</merge>